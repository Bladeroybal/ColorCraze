<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<View
		android:id="@+id/center_of_screen"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_centerInParent="true" />

	<Button
		android:id="@+id/reset_high_score_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_above="@id/center_of_screen"
		android:text="Reset High Score" />

	<Button
		android:id="@+id/tablet_mode_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/center_of_screen"
		android:text="Mode: Mobile" />

	<ImageView
		android:id="@+id/back_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:src="@drawable/back" />

</RelativeLayout>